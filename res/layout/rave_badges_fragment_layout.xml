<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" >

            <ImageView
                android:id="@+id/badge1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/avenger" />

            <ImageView
                android:id="@+id/badge2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/engizer" />

            <ImageView
                android:id="@+id/badge3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/hulk" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/badge4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/rave" />

            <ImageView
                android:id="@+id/badge5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/rockstar" />

            <ImageView
                android:id="@+id/badge6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/vip" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/badge10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:padding="15dp"
                android:src="@drawable/wizardofbugs" />
        </TableRow>
    </TableLayout>

</LinearLayout>